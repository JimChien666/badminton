set -e

# cd to app root
CWD=$(dirname $0)
if [[ `basename $(pwd)` == 'scripts' ]]; then
  cd ../
else
  cd `dirname ${CWD}`
fi

# Remove .env
rm -rf .env

# Make .env
touch .env

echo APP_ENV=ci >> .env
echo APP_DEBUG=true >> .env
echo APP_KEY=`php -r 'echo "base64:" . base64_encode(random_bytes(32));'` >> .env
